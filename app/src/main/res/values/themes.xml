<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AgroApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="Theme.AgroApp" parent="Base.Theme.AgroApp" />

    <style name="Theme.AgroApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AgroApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AgroApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="App.CardView.Default" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">6dp</item>
    </style>

    <style name="App.CardView.Themed" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/colorBackgroundGreenLight</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">6dp</item>
    </style>
</resources>