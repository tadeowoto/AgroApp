<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_campo"
    style="@style/App.CardView.Default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:rippleColor="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivCampoIcono"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:background="@drawable/bg_icono_campo"
            app:tint="@color/colorPrimary"
            app:srcCompat="@drawable/grass_24px" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreLote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lote Norte"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvCultivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cultivo: soja"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp" />
            <TextView
                android:id="@+id/tvSuperficie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Superficie: 150 ha"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvFechaCreacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de creaciÃ³n: 12/04/2020"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/colorTextSecondary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>