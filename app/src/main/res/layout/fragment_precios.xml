<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    tools:context=".menu.ui.precios.PreciosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precios de Granos"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cotizaciones actualizadas del mercado argentino"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:textSize="15sp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_price_info_box"
                        android:padding="10dp"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Última actualización"
                            android:textColor="@color/white"
                            android:alpha="0.8"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08/01/2025"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_price_info_box"
                        android:padding="10dp"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mercado"
                            android:textColor="@color/white"
                            android:alpha="0.8"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rosario"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/bg_price_info_box"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de cambio"
                            android:textColor="@color/white"
                            android:alpha="0.8"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1.050 USD"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_marginBottom="20dp">

            <com.google.android.material.card.MaterialCardView
                style="@style/App.CardView.Themed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivIconSoja"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/grass_24px"
                        app:tint="@color/colorPrimary"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tvPercentSoja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+2.5%"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/tvNombreSoja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soja"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/ivIconSoja"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tvPrecioSoja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$285.000"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/tvNombreSoja"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ARS/ton"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tvPrecioSoja"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/App.CardView.Themed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivIconTrigo"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/fertile_24px"
                        app:tint="@color/colorAccent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tvPercentTrigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-1.2%"
                        android:textColor="@color/colorError"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/tvNombreTrigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trigo"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/ivIconTrigo"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tvPrecioTrigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$195.000"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/tvNombreTrigo"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ARS/ton"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tvPrecioTrigo"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/App.CardView.Themed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivIconMaiz"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/nature_24px"
                        app:tint="#D2691E"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tvPercentMaiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+3.8%"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/tvNombreMaiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maíz"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/ivIconMaiz"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tvPrecioMaiz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$165.000"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/tvNombreMaiz"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ARS/ton"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tvPrecioMaiz"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/App.CardView.Themed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/ivIconGirasol"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/potted_plant_24px"
                        app:tint="#FFC107"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tvPercentGirasol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+1.5%"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                        android:id="@+id/tvNombreGirasol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Girasol"
                        android:textColor="@color/colorTextPrimary"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintTop_toBottomOf="@id/ivIconGirasol"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tvPrecioGirasol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$320.000"
                        android:textColor="@color/colorTextPrimary"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@id/tvNombreGirasol"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ARS/ton"
                        android:textColor="@color/colorTextSecondary"
                        android:textSize="12sp"
                        app:layout_constraintTop_toBottomOf="@id/tvPrecioGirasol"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tendencias del Mercado"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            style="@style/App.CardView.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivTrendIconSoja"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/allergy_24px"
                    app:tint="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvTrendNombreSoja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soja"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/ivTrendIconSoja"
                    app:layout_constraintTop_toTopOf="@id/ivTrendIconSoja"
                    app:layout_constraintBottom_toBottomOf="@id/ivTrendIconSoja"/>

                <TextView
                    android:id="@+id/tvTrendPrecioSoja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$285.000"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvTrendPercentSoja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2.5%"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tvTrendPrecioSoja"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ProgressBar
                    android:id="@+id/progressSoja"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:progress="70"
                    android:progressTint="@color/colorPrimary"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/ivTrendIconSoja"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/App.CardView.Default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivTrendIconTrigo"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:srcCompat="@drawable/deceased_24px"
                    app:tint="@color/colorAccent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvTrendNombreTrigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trigo"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    app:layout_constraintStart_toEndOf="@id/ivTrendIconTrigo"
                    app:layout_constraintTop_toTopOf="@id/ivTrendIconTrigo"
                    app:layout_constraintBottom_toBottomOf="@id/ivTrendIconTrigo"/>

                <TextView
                    android:id="@+id/tvTrendPrecioTrigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$195.000"
                    android:textColor="@color/colorTextPrimary"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvTrendPercentTrigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-1.2%"
                    android:textColor="@color/colorError"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tvTrendPrecioTrigo"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ProgressBar
                    android:id="@+id/progressTrigo"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:progress="30"
                    android:progressTint="@color/colorError"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/ivTrendIconTrigo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>