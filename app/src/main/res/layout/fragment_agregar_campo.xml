<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar campo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutNombreCampo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del campo"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombreCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutUbicacionCampo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ubicación"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUbicacionCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutAreaCampo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Área (ha)"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAreaCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutLatitudCampo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitud"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLatitudCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutLongitudCampo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitud"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_marginTop="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLongitudCampo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                 />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarCampo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar campo"
            android:layout_marginTop="24dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconTint="@android:color/white"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />

    </LinearLayout>
</ScrollView>
